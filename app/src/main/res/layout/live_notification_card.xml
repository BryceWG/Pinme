<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- 左侧：文字信息 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 第一行：标题 + 时间 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/live_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/class_example"
                android:textColor="@color/live_title_color"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:maxLines="1"
                android:text="@string/upcomingClassText"
                android:textColor="@color/live_low_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/live_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/live_time"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- 第二行：取件码内容 -->
        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/location_background"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/location_example"
            android:textColor="@color/live_title_color"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 右侧：Emoji 图标 -->
    <TextView
        android:id="@+id/live_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:textSize="48sp" />
</LinearLayout>
