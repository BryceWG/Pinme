<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="80dp">

    <!-- 左侧：主内容区域 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <!-- 第一行：标题 + 时间 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/live_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/class_example"
                android:textColor="@color/live_title_color"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_view_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:maxLines="1"
                android:text="@string/upcomingClassText"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/view_button_background"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/live_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:maxLines="1"
                android:textColor="@color/live_time"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- 第二行：取件码内容（字体大小和行数由代码动态设置） -->
        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/location_background"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/location_example"
            android:textColor="@color/live_title_color"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 中间：锯齿分隔线（无边距，完全填充高度） -->
    <ImageView
        android:id="@+id/ticket_perforation"
        android:layout_width="12dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ticket_perforation"
        android:contentDescription="@null" />

    <!-- 右侧：撕开区域（点击消除通知），背景与锯齿同色 -->
    <FrameLayout
        android:id="@+id/btn_close"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_marginStart="-1dp"
        android:background="@drawable/ticket_tear_background"
        android:clickable="true"
        android:focusable="true"
        android:paddingEnd="6dp">

        <TextView
            android:id="@+id/live_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="48sp" />
    </FrameLayout>
</LinearLayout>
